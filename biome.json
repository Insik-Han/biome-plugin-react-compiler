{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "plugins": [
    "./rules/no-prop-mutation.grit",
    "./rules/no-props-array-push.grit",
    "./rules/no-props-array-pop.grit",
    "./rules/no-props-array-splice.grit",
    "./rules/no-props-array-sort.grit",
    "./rules/no-props-array-reverse.grit"
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "error"
      }
    }
  },
  "javascript": {
    "jsxRuntime": "transparent"
  }
}
